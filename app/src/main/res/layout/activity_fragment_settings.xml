<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    tools:context=".SaisieReleveindex">

    <!--<include layout="@layout/content_saisie_releveindex" />-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:paddingRight="20dp"
            android:paddingLeft="10dp">


            <TextView
                android:id="@+id/lblserveur"
                android:layout_width="114dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:text="@string/serveur"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/txtserveur"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/lblserveur"
                android:background="@drawable/bg_spinner"
                android:ems="10"
                android:inputType="text"
                android:padding="5dp"
                android:textColor="@android:color/background_dark"
                android:textSize="18dp" />



            <RelativeLayout
                android:id="@+id/rlspincmv"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_toRightOf="@id/lblcmv"
                android:background="@drawable/bg_spinner"
                android:textSize="18dp"
                android:layout_below="@+id/txtserveur"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp">

                <Spinner
                    android:id="@+id/spincmv"
                    style="@style/Widget.AppCompat.DropDownItem.Spinner"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:spinnerMode="dropdown"
                    android:textSize="18dp"
                    />
            </RelativeLayout>

            <TextView
                android:id="@+id/lblcmv"
                android:layout_width="114dp"
                android:layout_height="35dp"
                android:layout_below="@+id/txtserveur"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:text="@string/cmv"
                android:textSize="18dp" />



            </RelativeLayout>






    </LinearLayout>
</ScrollView>